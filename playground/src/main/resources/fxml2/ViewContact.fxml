<?xml version="1.0" encoding="UTF-8"?>

<?language javascript?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox spacing="10"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.zenjava.playground.browser2.demo.contact.ViewContactActivity">

    <styleClass><String fx:value="view-contact"/></styleClass>
    <children>

        <Label fx:id="titleLabel">
            <styleClass>
                <String fx:value="label"/>
                <String fx:value="title"/>
            </styleClass>
        </Label>

        <GridPane hgap="10" vgap="10">
            <children>
                <ImageView fx:id="photo" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="2"/>

                <Label text="First Name" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label fx:id="firstNameField" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

                <Label text="Last Name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label fx:id="lastNameField" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                <Label text="Company" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="companyField" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
            </children>
        </GridPane>

    </children>
</VBox>